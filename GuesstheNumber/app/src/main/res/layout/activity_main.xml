<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern"
    android:gravity="top|center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_eyeball" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="The Eye"
        android:textSize="32sp"
        android:padding="16dp"
        android:textColor="@color/teal_700"
        android:gravity="center"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textViewBelow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Tap on generate to start"
        android:textSize="32sp"
        android:padding="16dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginTop="20dp" />

    <!-- Contenedor para los botones "Down" y "Up" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:padding="16dp">

        <Button
            android:id="@+id/down"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/mustard"
            android:padding="12dp"
            android:text="Down"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mustard"
            android:layout_weight="1"
            android:text="Up"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="12dp" />
    </LinearLayout>

    <!-- Contenedor para el botón adicional "Generate" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/generate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/navyblue"
            android:padding="12dp"
            android:text="Generate"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

    <!-- Contenedor para el botón adicional debajo de "Generate" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/anotherButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mustard"
            android:padding="12dp"
            android:visibility="gone"
            android:text="Guessed"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>
